<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        ルーム詳細
      </h1>
    </div>
  </div>
</section>
 
<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <%= attachment_image_tag @room, :image %>
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="title is-4"><%= @room.title %></p>
              </div>
            </div>
            <div class="content">
              <table class="table is-narrow">
                <tr>
                  <th>ルーム詳細</th>
                </tr>
                <tr>
                  <td><%= simple_format @room.body %></td>
                </tr>
                <tr>
                  <th>料金</th>
                </tr>
                <tr>
                  <td><%= @room.price %></td>
                </tr>
                <tr>
                  <th>住所</th>
                </tr>
                <tr>
                  <td><%= simple_format @room.adress %></td>
                </tr>
              </table>
              <div class="media">
              <% if @room.user.id == current_user.id %>
                <%= link_to "編集画面へ", edit_room_path(@room), class: "button is-success" %>
              <% end %>
            </div>
        <section class="section">
        <div class="container">
         <div class="columns is-centered">
          <div class="column is-6">
            <%= form_for @reservation do |f| %>
           <div class="field">
            <%= @room.price %>円/日
           </div>
          <div class="field">
            <%= f.label :StartDate, "開始日", class: "label" %>
            <%= f.date_field :StartDate, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :EndDate, "終了日", class: "label" %>
            <%= f.date_field :EndDate, class: "input" %>
          </div>
          
          <div class="field">
            <%= f.label :person_num, "人数", class: "label" %>
            <%= f.number_field :person_num, class: "input" %>
          </div>
          <%= f.hidden_field :room_id, value: @room.id %>
          <%= f.submit '予約確認画面へ', class: "button is-success" %>
          <% end %>

      </div>
    </div>
  </div>
</section>
          </div>
        </div>
      </div>

      <div class="column is-4">
        <article class="panel is-link">
          <p class="panel-heading">
            By <%= @room.user.username %>
          </p>
          <div class="panel-block">
            <p class="control">
              <%= @room.user.profile %>
            </p>
          </div>
          <%= link_to user_path(@room.user), class: "panel-block" do %>
            <span class="panel-icon">
              <i class="fas fa-user" aria-hidden="true"></i>
            </span>
            <%= @room.user.username %> さんのページへ
          <% end %>
        </article>
      </div>
    </div>
  </div>
</section>
