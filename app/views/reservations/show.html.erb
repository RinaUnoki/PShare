<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        予約内容確認
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <div class="card">
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="title is-4">￥<%= @room.price %>/日</p>
              </div>
            </div>
            <div class="content">
              <table class="table is-narrow">
                <tr>
                  <th>開始日</th>
                </tr>
                <tr>
                  <td><%= @reservation.StartDate %></td>
                </tr>
                <tr>
                  <th>終了日</th>
                </tr>
                <tr>
                  <td><%= @reservation.EndDate %></td>
                </tr>
                <tr>
                  <th>人数</th>
                </tr>
                <tr>
                  <td><%= @reservation.person_num %></td>
                </tr>
                <tr>
                  <th>合計金額</th>
                </tr>
                <tr>
                  <td><%= (@room.price*@reservation.person_num)*(@reservation.EndDate.to_date - @reservation.StartDate.to_date).to_i %></td>
                </tr>
              </table>
              <div class="media">
        　 　   <%= form_for @reservation, method: :post, url: reservations_new_path do |form| %>
 	        　　<%= form.hidden_field :StartDate %>
	        　　<%= form.hidden_field :EndDate %>
	        　　<%= form.hidden_field :person_num %>
	        　　<%= form.submit '入力画面に戻る' %>
          　　<% end %>
          
          　　<%= form_for @reservation, method: :post, url: "/" do |form| %>
	        　　<%= form.hidden_field :StartDate %>
	        　　<%= form.hidden_field :EndDate %>
	        　　<%= form.hidden_field :person_num %>
	        　　<%= form.submit '予約する', class: "button is-success" %>
          　　<% end %>
            </div>
          </div>
        </div>
      </div>
      </article>
      </div>
    </div>
  </div>
</section>
